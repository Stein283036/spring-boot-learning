<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- mapperspace 的 namespace 名称空间必须和 Mapper 接口的全限定名一致 -->
<mapper namespace="com.guhe.mybatis.mapper.BookMapper">

    <!-- List<Book> selectAllBook(); -->
    <!-- Mapper 配置文件中的 SQL 语句的 id 必须和 Mapper 接口的方法名称一致 -->
    <select id="selectAllBook" resultType="com.guhe.mybatis.pojo.Book">
        select *
        from tb_book;
    </select>
</mapper>